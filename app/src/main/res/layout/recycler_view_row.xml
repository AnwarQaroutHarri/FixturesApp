<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.firstworktask.main.models.models.Response"/>
        <variable
            name="data"
            type="Response" />
        <variable
            name="TBD"
            type="String"
            android:value="TBD"/>
        <variable
            name="notStarted"
            type="String"
            android:value="Not Started"/>


    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#7A7474"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/firstTeamImageView"
                android:layout_width="84dp"
                android:layout_height="101dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="8dp"
                app:teamImage="@{data.teams.home.logo}"
                app:layout_constraintBottom_toTopOf="@+id/firstTeamTextView"
                app:layout_constraintEnd_toStartOf="@+id/homeTeamScore"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.705"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/secondTeamImageView"
                android:layout_width="84dp"
                android:layout_height="99dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="4dp"
                app:teamImage="@{data.teams.away.logo}"
                app:layout_constraintBottom_toTopOf="@+id/secondTeamTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.649"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/awayTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                android:text="@{String.valueOf(data.score.fulltime.away) ?? TBD }"
                app:layout_constraintEnd_toStartOf="@+id/secondTeamImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homeTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@{String.valueOf(data.score.fulltime.home)}"

                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/dateTV"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="1.0" />



            <TextView
                android:id="@+id/firstTeamTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="60dp"
                android:text="@{data.teams.home.name}"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/secondTeamTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="168dp"
                android:layout_marginEnd="52dp"
                android:text="@{data.teams.away.name}"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:text="-"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/awayTeamScore"
                app:layout_constraintStart_toStartOf="@+id/dateTV"
                app:layout_constraintTop_toTopOf="@+id/awayTeamScore"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="148dp"
                android:text="@{String.valueOf(data.fixture.date)}"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.872" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>